<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('partials/head')%>
    <title>homepage</title>
</head>

<body>
    <%-include('partials/nav')%>
    <div class="container mt-4">
      <div class="row g-4">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageURL %>" class="card-thumb" alt="<%= blog.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="text-muted small mb-2">by <%= blog.createdBy ? blog.createdBy.fullName : 'Author' %></p>
              <p class="card-text text-truncate" style="-webkit-line-clamp:3; display:-webkit-box; -webkit-box-orient:vertical; overflow:hidden;"><%= blog.body %></p>
              <div class="mt-auto d-flex justify-content-between align-items-center">
                <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">View</a>
                <small class="text-muted"><%= new Date(blog.createdAt).toLocaleDateString() %></small>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

<%-include('partials/script')%>
</body>

</html>